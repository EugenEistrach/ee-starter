{
  "name": "ee-starter",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "1.27.5",
      "better-auth": "^1.3.27",
      "@convex-dev/better-auth": "^0.9.6",
      "typescript": "^5.9.3",
      "eslint": "^9.37.0",
      "@antfu/eslint-config": "^6.0.0",
      "@eslint-react/eslint-plugin": "^2.2.2",
      "eslint-plugin-react-hooks": "^7.0.0",
      "eslint-plugin-react-refresh": "^0.4.24",
      "eslint-plugin-boundaries": "^5.1.0",
      "eslint-plugin-import": "^2.32.0",
      "eslint-import-resolver-typescript": "^4.4.4",
      "@types/eslint": "^9.6.1",
      "@types/estree": "^1.0.8",
      "@types/node": "^24.7.2",
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "~19.2.2",
      "@types/react-dom": "^19.2.2",
      "lucide-react": "^0.545.0",
      "sonner": "^2.0.7",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.3.1",
      "tailwindcss": "^4.1.14",
      "tw-animate-css": "^1.4.0",
      "@tanstack/react-form": "^1.23.7"
    }
  },
  "resolutions": {
    "convex": "1.27.5"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "knip": "knip",
    "check": "turbo check --continue && bun run knip",
    "fix": "turbo fix",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @workspace/backend dev",
    "clean": "turbo clean && rm -rf node_modules",
    "check-dependencies": "bunx taze major -r",
    "update-dependencies": "bunx taze major -r -w",
    "prepare": "husky",
    "postinstall": "bun run packages/scripts/src/postinstall.ts"
  },
  "dependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "husky": "^9.1.7",
    "knip": "^5.65.0",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.3.0"
}
